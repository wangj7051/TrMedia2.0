<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:centerY="0.95"
                android:endColor="@color/color_black_100"
                android:startColor="@color/color_black_100" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/color_yellow_f36634"
                    android:startColor="@color/color_yellow_f36634" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/color_yellow_f36634"
                    android:startColor="@color/color_yellow_f36634" />
            </shape>
        </clip>
    </item>

</layer-list>