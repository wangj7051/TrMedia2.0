<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- SLB Style -->
    <style name="Widget.SeekBar.SLC_LC2010_VDC.RADIO" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">30dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@android:color/transparent</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:thumb">@drawable/seekbar_point_radio</item>
        <item name="android:thumbOffset">0dp</item>
    </style>
    <style name="Widget.SeekBar.SLC_LC2010_VDC.RADIO.DISABLE" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">60dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/seekbar_searchingall</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

</resources>
