<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tricheer.player"
    android:versionCode="1"
    android:versionName="1.0">

    <!--Storage permission-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <!--Bluetooth-->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <!-- Settings Provider -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.HARDWARE_TEST" />

    <!-- Screen ON/OFF -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <!-- ??? -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!--GPS-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.tricheer.player.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:persistent="true"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Music & Video & Radio Player Start Activity -->
        <activity
            android:name="com.tricheer.player.VideoPlayerActivity"
            android:icon="@drawable/ic_launcher_video"
            android:label="@string/app_name_video"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tricheer.player.MusicPlayerActivity"
            android:icon="@drawable/ic_launcher_music"
            android:label="@string/app_name_music"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SLC_LC2010_VDC -->
        <activity
            android:name="com.tricheer.player.version.cj.slc_lc2010_vdc.activity.SclLc2010VdcAudioListActivity"
            android:icon="@drawable/ic_launcher_music"
            android:label="@string/app_name_music"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.tricheer.player.version.cj.slc_lc2010_vdc.activity.SclLc2010VdcAudioPlayerActivity"
            android:icon="@drawable/ic_launcher_music"
            android:label="@string/app_name_music"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.tricheer.player.version.cj.slc_lc2010_vdc.activity.SclLc2010VdcVideoListActivity"
            android:icon="@drawable/ic_launcher_music"
            android:label="@string/app_name_music"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.tricheer.player.version.cj.slc_lc2010_vdc.activity.SclLc2010VdcVideoPlayerActivity"
            android:icon="@drawable/ic_launcher_music"
            android:label="@string/app_name_music"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name="com.tricheer.player.version.cj.slc_lc2010_vdc.activity.SclLc2010VdcVideoWarningActivity"
            android:icon="@drawable/ic_launcher_music"
            android:label="@string/app_name_music"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar" />

        <!-- Music Play Service -->
        <service
            android:name="com.tricheer.player.service.TrPlayService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService" />

        <!-- Media Scanner Receiver -->
        <receiver
            android:name="com.tricheer.player.receiver.MediaScanReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />
                <action android:name="android.intent.action.MEDIA_MOUNTED" />
                <action android:name="android.intent.action.MEDIA_CHECKING" />
                <action android:name="android.intent.action.MEDIA_EJECT" />
                <action android:name="android.intent.action.MEDIA_REMOVED" />

                <data android:scheme="file" />
            </intent-filter>
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_SCANNER_STARTED" />
                <action android:name="android.intent.action.MEDIA_SCANNER_FINISHED" />
            </intent-filter>
            <intent-filter android:priority="1000">
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <!-- UDisk listener, From Android6.0 -->
            <intent-filter android:priority="1000">
                <action android:name="android.os.storage.action.VOLUME_STATE_CHANGED" />

                <data android:scheme="file" />
            </intent-filter>
            <intent-filter android:priority="1000">
                <action android:name="com.tricheer.player.START.LIST.ALL_MEDIAS" />
                <action android:name="android.hardware.input.action.POWER_DISCONNECTED" />
            </intent-filter>
            <intent-filter android:priority="1000">
                <action android:name="com.tricheer.SYSTEM_DOWN" />
                <action android:name="com.tricheer.SYSTEM_UP" />
            </intent-filter>
            <intent-filter android:priority="1000">
                <action android:name="android.hardware.input.action.POWER_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <!-- Player Receiver -->
        <receiver
            android:name="com.tricheer.player.receiver.PlayerReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">

            <!-- System Boot -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>

            <!-- Music / Video -->
            <intent-filter android:priority="1000">
                <action android:name="com.tricheer.music.PLAY_FROM_FILEMANAGER" />
                <action android:name="com.tricheer.video.PLAY_FROM_FILEMANAGER" />
            </intent-filter>

            <!-- Open Player Logs -->
            <intent-filter android:priority="1000">
                <action android:name="com.tricheer.app.OPEN_LOGS" />
            </intent-filter>

            <!--Test Broadcast-->
            <intent-filter android:priority="1000">
                <action android:name="com.tri.test.OPEN_SELECTED_VIDEOLIST" />
                <action android:name="com.tri.test.OPEN_AUDIO" />
                <action android:name="com.tri.test.OPEN_VIDEO" />
                <action android:name="com.tri.test.EXIT_PLAYER" />
            </intent-filter>
        </receiver>

        <!-- ACC -->
        <receiver
            android:name="com.tri.lib.receiver.AccReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="tricheer.intent.action.ACC_OFF" />
                <action android:name="tricheer.intent.action.SLEEP" />
                <action android:name="tricheer.intent.action.ACC_ON" />
            </intent-filter>
        </receiver>
        <!-- Reverse -->
        <receiver
            android:name="com.tri.lib.receiver.ReverseReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.tricheer.carback.on" />
                <action android:name="com.tricheer.carback.off" />
            </intent-filter>
        </receiver>
        <!--Screen State-->
        <receiver android:name="com.tri.lib.receiver.ScreenStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>
        <!-- Media Button -->
        <receiver android:name="js.lib.android.media.engine.mediabtn.MediaBtnReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>