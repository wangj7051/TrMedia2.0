<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/video_item_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/v_cover"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/no_img"
            android:scaleType="fitXY"
            android:src="@color/video_item_bg" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_op_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/no_img"
        android:src="@drawable/op_play" />

    <TextView
        android:id="@+id/v_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl_cover"
        android:layout_alignRight="@id/rl_cover"
        android:layout_alignBottom="@id/rl_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>