<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/v_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/video_warning_op1"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/no_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@color/video_warning_separate_line" />

        <TextView
            android:id="@+id/v_no_toast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/video_warning_op2"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/no_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@color/video_warning_separate_line" />

        <TextView
            android:id="@+id/v_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/video_warning_op3"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_separate_h"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/layout_bottom"
        android:background="@color/video_warning_separate_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/v_separate_h"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/no_img"
            android:scaleType="fitXY"
            android:src="@drawable/icon_warning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_warning"
            android:textColor="@android:color/white"
            android:textSize="100sp" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/video_warning_desc"
            android:textColor="@android:color/white"
            android:textSize="35sp" />
    </LinearLayout>

</RelativeLayout>