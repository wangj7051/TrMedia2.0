<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="@dimen/audio_lv_com_icon_w"
        android:layout_height="@dimen/audio_lv_com_icon_h"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/audio_lv_com_ui_space"
        android:contentDescription="@string/no_img"
        android:scaleType="fitXY"
        android:src="@drawable/icon_item_selected" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/audio_lv_com_h"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/audio_lv_com_ui_space"
        android:layout_marginEnd="@dimen/audio_lv_com_ui_space"
        android:layout_toEndOf="@id/iv_start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_idx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/audio_lv_com_font_size" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/audio_lv_com_ui_space"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/audio_lv_com_font_size" />
    </LinearLayout>

</RelativeLayout>